<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Nasconde il secondo ambito all'inizio
        document.getElementById('Left-Ambito1').style.display = 'none';

        // Aggiungi l'evento al pulsante solo dopo che il DOM è stato caricato
        document.getElementById("selettore_button").addEventListener("click", function () {
            Selection++;
            console.log("Selection:", Selection);
            CambioAmbito(Selection);
        });
    });

    let selectedButton = null;
    let Selection = 0;

    function CambioAmbito(selection) {
        if (selection === 1) {
            // Nasconde il primo ambito e mostra il secondo
            document.getElementById('Left-Ambito').style.display = 'none';
            document.getElementById('Left-Ambito1').style.display = 'block';
        } else {
            // Mostra di nuovo il primo ambito (opzionale)
            document.getElementById('Left-Ambito').style.display = 'block';
            document.getElementById('Left-Ambito1').style.display = 'none';
        }
    }

    // Funzione per selezionare un ambito
    function selectAmbito(button) {
        const buttons = document.querySelectorAll('.selettore-button');
        buttons.forEach(btn => btn.classList.remove('selected'));

        // Seleziona il pulsante cliccato
        button.classList.add('selected');
        selectedButton = button;

        // Attiva il bottone avanti
        document.getElementById('arrow-button').disabled = false;
        document.getElementById('arrow-button').style.backgroundColor = '#194572'; // Colore blu attivo
        document.getElementById('arrow-button').style.cursor = "pointer";
    }
