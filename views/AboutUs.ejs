    <script>
        let scrollPosition = -29; // Posizione iniziale della tendina (fuori schermo)
        let isOpen = false; // Stato della tendina (chiusa)

        document.getElementById('arrow-down').addEventListener('click', function() {
            // Se la tendina è chiusa, aprila
            if (!isOpen) {
                document.querySelector('.scroll-section').style.bottom = '0%';
                document.getElementById('arrow-down').classList.add('arrow-rotated'); // Ruota la freccia
            } 
            // Se la tendina è aperta, chiudila
            else {
                document.querySelector('.scroll-section').style.bottom = '-29%';
                document.getElementById('arrow-down').classList.remove('arrow-rotated'); // Torna alla posizione originale
            }
            isOpen = !isOpen; // Alterna lo stato
        });
    </script>
</body>
